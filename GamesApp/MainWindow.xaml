<Window x:Class="GamesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <StackPanel Background="#fff"  Width="200" VerticalAlignment="Stretch" HorizontalAlignment="Left" >
            <Image Width="50" Source="Assets/logo.png" Margin="0,20,0,0" />
            <Button Content="Games List" Click="BtnClickGamesList" Margin="0,20,0,0" BorderThickness="0" FontSize="16" Background="#2E72E0" FontFamily="Poppins" Foreground="#fff" />
            <Button Content="Add game" Click="BtnClickAddGame" Margin="0,10,0,0" BorderThickness="0" FontSize="16" Background="#2E72E0" FontFamily="Poppins" Foreground="#fff"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="200,0,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
